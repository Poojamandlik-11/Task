@model IEnumerable<ProductCategory>
<style>
    .pagination{
        display:flex;
        list-style:none;
    }

    .pagination a {
        padding:5px 10px;
        margin: 5px;
        text-decoration: none;
        color:#333;
    }

    .pagination a .active {
        background-color: #333;
        color: white;
    }
</style>
    <table class="table">
        <tr>
            <th>ProductId</th>
            <th>ProductName</th>
            <th>CategoryId</th>
            <th>CategoryName</th>
        </tr>
        @foreach(var item in Model)
    {
        <tr>
            <td>@item.ProductId</td>
            <td>@item.ProductName</td>
            <td>@item.CategoryId</td>
            <td>@item.CategoryName</td>
        </tr>

    }
</table>
<div class="pagination">
    @for (int i = 1; i<=ViewBag.TotalPages;i++)
    {
        <a href="@Url.Action("Index",new{ page = 1})"class=" @(ViewBag.CurrentPage == 1 ?"active":"")">@i</a>
    }
</div>